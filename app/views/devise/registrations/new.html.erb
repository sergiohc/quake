<div class="flex flex-col items-center justify-center min-h-screen px-6 pt-8 mx-auto dark:bg-gray-900">
  <div class="flex items-center justify-start mb-4">
    <h2 class="max-w-lg self-center text-xl dark:text-white text-center">
      <%= t('views.registration.new_instructions', default: "Create your account") %>
    </h2>
  </div>

  <div class="w-full max-w-lg p-6 space-y-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo de e-mail -->
      <div class="field mt-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' %>
      </div>

      <!-- Campo de senha -->
      <div class="field mt-4">
        <%= f.password_field :password, autocomplete: "new-password", class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><em><%= @minimum_password_length %> caracteres no mínimo</em></p>
        <% end %>
      </div>

      <!-- Campo de confirmação de senha -->
      <div class="field mt-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' %>
      </div>

      <!-- Botão de registro -->
      <div class="mt-4">
        <%= f.submit t('views.registration.sign_up_button', default: "Sign up"), class: 'w-full' %>
      </div>
    <% end %>

    <!-- Link para login -->
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600 dark:text-gray-400">
        <%= t('views.registration.already_have_account', default: "Already have an account?") %>
        <%= link_to t('views.registration.sign_in', default: "Sign in"), new_session_path(resource_name), class: 'text-primary-600 hover:underline dark:text-primary-500' %>
      </p>
    </div>
  </div>
</div>
